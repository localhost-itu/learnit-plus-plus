{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "assets/*": [
        "./assets/*"
      ],
      "~*": [
        "./src/*"
      ],
      "@Components/*": ["./src/components/*"]
    },
    // "module": "esnext",
    "moduleResolution": "bundler", // overwrite plasmo default as it is deprecated
    "jsx": "react-jsx",
  }
}
